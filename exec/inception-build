#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  export CONSUL_SERVER='172.28.128.1'
  runmany 'docker machine rm -f $1 2>&- || true' reality van hotel fortress
  runmany 'reality $1' recycle 'swarm primary'
  runmany '$1 recycle; $1 swarm node' van hotel fortress
  docker machine ls
  inception swarm network create inception
}

source sub "$BASH_SOURCE" "$@"
