#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"
  source inception_common

  export LIMBO_LINKED_CLONES=0
  export BASEBOX_MACHINE="${BASEBOX_NAME}"

  if [[ "$#" == 0 ]]; then
    set -- plane virtualbox
  fi

  while [[ "$#" != 0 ]]; do
    if [[ "$#" == 1 ]]; then
      set -- "$@" virtualbox
    fi

    b="$1"; shift
    a="$1"; shift

    export INCEPTION_DREAM="$b"
    source "reality_common"

    $b $a host init dream
    $b $a container init

    $b lxc exec "${BASEBOX_NAME}" -- lxc image copy ubuntu:16.04 local: --alias xenial

    $b docker pull "${CACHE_VIP}:5001/ubuntu:xenial"
    $b docker tag "${CACHE_VIP}:5001/ubuntu:xenial" "ubuntu:xenial"
    $b docker machine rm -f "${BASEBOX_NAME}"

    home remote init $b vagrant ssh --

    tar cf - /vagrant/{packages,curl} | $b lxc exec "${BASEBOX_NAME}" -- tar xvf - -C /
    $b lxc exec "${BASEBOX_NAME}" -- chown -R ubuntu:ubuntu /vagrant

    local ip_lxd="$($b lxc list "${BASEBOX_NAME}" --format json | jq -r '.[].state.network.br0.addresses[] | select(.family == "inet").address')"
    ssh-keygen -R "$ip_lxd"
    ssh-keygen -R "$b"
    home remote init ssh -A -o StrictHostKeyChecking=no ubuntu@"$ip_lxd"

    $b lxc stop "${BASEBOX_NAME}"

    $b vagrant ssh -- sudo rm -f /etc/network/interfaces.d/99-limbo-fan.cfg

    $b vagrant ssh -- sudo lvcreate -s -n "${BASEBOX_NAME}0" "${BASEBOX_NAME}/${BASEBOX_NAME}"
    $b lxc snapshot "${BASEBOX_NAME}" "${BASEBOX_NAME}0"

    $b $a reuse vagrant
  done
}

source sub "$BASH_SOURCE" "$@"
