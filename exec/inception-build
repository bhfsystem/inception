#!/usr/bin/env bash

function main {
  local shome="${_inception_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"

  for a in $PLANE $VAN; do
    docker machine rm -f $a1 2>&- || true
    $a update
    case "$a" in
      $PLANE)
        $a virtualbox recycle
        $a virtualbox swarm primary
        $INCEPTION network create inception || true
        ;;
      
      $VAN)
        $a vmware recycle
        $a vmware swarm node
        ;;
    esac
  done

  $INCEPTION docker machine ls
}

source sub "$BASH_SOURCE" "$@"
