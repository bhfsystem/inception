#!/usr/bin/env bash

function main {
  local shome="${_inception_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"
  source inception_common

  if [[ "$#" == 0 ]]; then
    set -- virtualbox vmware parallels
  fi

  for a in "$@"; do
    case "$a" in
      virtualbox|van)
        a=virtualbox
        b=van
        ;;
      vmware|hotel)
        a=vmware
        b=hotel
        ;;
      parallels|snow) 
        a=parallels
        b=snow
        ;;
    esac
    $b $a rebase
    $b $a reuse vagrant
  done
}

source sub "$BASH_SOURCE" "$@"
