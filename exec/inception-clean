#!/usr/bin/env bash

function main {
  local shome="${_inception_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"

  $INCEPTION destroy -f

  VBoxManage list vms 2>&- | cut -d'"' -f2 | runmany 'VBoxManage controlvm $1 poweroff || true; VBoxManage unregistervm --delete $1 || true'

  vmrun list 2>&- | grep -v "Total" | runmany 'vmrun stop "$1" || true; j vmrun deleteVM "$1 || true"'
}

source sub "$BASH_SOURCE" "$@"
