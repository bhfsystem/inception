#!/usr/bin/env bash

function main {
  local shome="${_inception_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"
  source inception_common

  runmany 'docker machine rm -f $1 2>&- ||  true' plane van hotel snow

  if [[ "$#" == 0 ]]; then
    set -- virtualbox vmware parallels
  fi

  export LIMBO_LINKED_CLONES=1

  for a in "$@"; do
    case "$a" in
      virtualbox) van virtualbox recycle ;;
      vmware) hotel vmware recycle ;;
      parallels) snow parallels recycle ;;
    esac
  done
}

source sub "$BASH_SOURCE" "$@"
