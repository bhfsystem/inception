#!/usr/bin/env bash

function main {
  local shome="${_inception_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"
  source inception_common

  if [[ "$#" == 0 ]]; then
    set -- van virtualbox
  fi

  export LIMBO_LINKED_CLONES=1

  while [[ "$#" != 0 ]]; do
    if [[ "$#" == 1 ]]; then
      set -- "$@" virtualbox
    fi

    b="$1"; shift
    a="$1"; shift

    $b $a recycle
    $b $a lxd init
    $b $a update
    $b $a docker init
  done
}

source sub "$BASH_SOURCE" "$@"
