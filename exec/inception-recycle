#!/usr/bin/env bash 

function dreamer {
  local b="$1"; shift
  case "$b" in
    plane) echo fischer ;;
    van) echo yusuf ;;
    hotel) echo arthur ;;
    snow) echo eames ;;
  esac
}

function main { 
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile" 
  source inception_common 

  export LIMBO_LINKED_CLONES=1

  if [[ "$#" == 0 ]]; then
    set -- plane virtualbox
  fi

  while [[ "$#" != 0 ]]; do
    if [[ "$#" == 1 ]]; then
      set -- "$@" virtualbox
    fi

    b="$1"; shift
    a="$1"; shift

    export INCEPTION_DREAM="$b"
    source "reality_common"

    $b $a recycle

    $b $a lxd init yes

    $b $a docker init "$(dreamer $b)" inception/inception0

    $b vagrant ssh -- ln -nfs ../sv/consul service/
    $b vagrant ssh -- bash -c "$(printf '%q' 'screen -S home-script-server -d -m script/server screen; sleep 5')"
    $b vagrant ssh -- screen -X -S home-script-server quit
    ssh-keygen -R $b

    "$(dreamer $b)" $a lxd init

    local ip_lxd="$($b lxc list "$(dreamer $b)" --format json | jq -r '.[].state.network.br0.addresses[] | select(.family == "inet").address')"
    ssh-keygen -R "$ip_lxd" || true
    ssh -o StrictHostKeyChecking=no ubuntu@"$ip_lxd" -- ln -nfs ../sv/consul service/
    ssh ubuntu@"$ip_lxd" -- bash -c "$(printf '%q' 'screen -S home-script-server -d -m script/server screen; sleep 5')"
    ssh ubuntu@"$ip_lxd" -- screen -X -S home-script-server quit
    ssh-keygen -R "$(dreamer $b)"
  done
}

source sub "$BASH_SOURCE" "$@"
