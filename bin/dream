#!/usr/bin/env bash

export INCEPTION_DREAM="${BASH_SOURCE##*/}"
export BASEBOX_INSTANCE="${INCEPTION_DREAM}"

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"
  source inception_common

  limbo "$@"
}

if [[ -n "${VAGRANT_DEFAULT_PROVIDER:-}" ]]; then
  source sub-chain reality "$@"
else
  case "$BASH_SOURCE" in
    *plane|*fischer)
      a=virtualbox
      b=plane
      c=fischer
      ;;
    *van|*yusuf)
      a=virtualbox
      b=van
      c=yusuf
      ;;
    *hotel|*arthur)
      a=vmware
      b=hotel
      c=arthur
      ;;
    *snow|*eames)
      a=parallels
      b=snow
      c=eames
      ;;
  esac

  export BASEBOX_DREAM="$b"
  export BASEBOX_DREAMER="$c"
  source sub-chain reality "$a" "$@"
fi
