#!/usr/bin/env bash

function main {
  local shome="${_inception_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"
  source inception_common

  if limbo "$@"; then
    case "${1:-}" in
      build|recycle|rebase) 
        limbo update
        limbo docker init
        limbo lxc init
        limbo docker ps
        limbo docker images -a
        limbo lxc list
        limbo lxc image list
        ;;
    esac
  fi
}

source sub-chain reality "$@"
